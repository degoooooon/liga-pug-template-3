extends ../components/base/layout

block variables
  - const title = "ProjectName" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const promoHas = true
  - const hasFooter = true
  - const footerMods = ""
  - const sociallist = "social-list__list--current"
  - const contantinfo = "contant-info--current"
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks


block main
  main
    //- на странице запрещен "голый" код
    //- все блоки вставляются из папки pug/components/blocks
    +promo()
    +about()
    +countries()
    +people()
    +user()
    +appointment()
    +contact()
    +map()

block modals
  +modal("modal--feedback")(data-modal="feedback")
    +modal-feedback()
