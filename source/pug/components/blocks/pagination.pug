mixin pagination
  div.pagination
    ul.pagination__list
      li.pagination__item
        a.pagination__link.pagination__link--current(href="#") 1
      li.pagination__item
        a.pagination__link(href="#") 2
      li.pagination__item
        a.pagination__link(href="#") 3
      li.pagination__item
        a.pagination__link(href="#") 4
    .pagination__buttons
      button.pagination__button
        span.visually-hidden Предыдущая страница
      button.pagination__button.pagination__button--arrow
        span.visually-hidden Следующая страница
